            <div class="space py-3"></div>
        </div>
    </section>   
    <section id="profile" class="py-5">
        <div class="container text-center">
            <p class="h3 font-weight-bold">Your Profile</p>
            <hr width="30%">
            <div class="row justify-content-center align-item-center  py-5">
                <div class="col-lg-2 col-md-1"></div>
                <div class="col-lg-8 col-md-10">
                    <div class="card bg-dark mb-3">
                        <div class="card-body">
                            <img src="/images/debraj.jpg" alt="" class="propic img-fluid rounded-circle w-50" width="20%" height="20%">
                            <div class="py-3"></div>
                            <table class="table table-borderless table-hover table-dark">
                                <tbody>
                                    <tr>
                                        <td>Name:</td>
                                        <td><%= Fname %> <%= Lname %></td>
                                    </tr>
                                    <tr>
                                        <td>Email:</td>
                                        <td><%= email %></td>
                                    </tr>
                                    <tr>
                                        <td>Phone Number:</td>
                                        <td><%= phone %></td>
                                    </tr>
                                    <tr>
                                        <td>Joined Budgety:</td>
                                        <td><%= DOJ %></td>
                                    </tr>
                                    <tr>
                                        <td>Address Line 1:</td>
                                        <td><%= add1 %></td>
                                    </tr>
                                    <tr>
                                        <td>Address Line 2:</td>
                                        <td><%= add2 %></td>
                                    </tr>
                                    <tr>
                                        <td>City:</td>
                                        <td><%= city %></td>
                                    </tr>
                                    <tr>
                                        <td>State:</td>
                                        <td><%= state %></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <a href="/users/logout" class="lgbtn btn d-inline rounded px-4 py-2">Logout</a>
                </div>
                <div class="col-lg-2 col-md-1"></div>
            </div>
        </div>
    </section>