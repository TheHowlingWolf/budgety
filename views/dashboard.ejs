                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a href="home-loggedin" class="nav-link">Home</a>
                        </li>
                        <li class="nav-item">
                            <a href="dashboard" class="nav-link">Profile</a>
                        </li>
